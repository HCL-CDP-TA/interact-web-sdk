{
  "name": "@hcl-cdp-ta/interact-sdk",
  "version": "2.8.0",
  "description": "HCL Interact SDK - Universal TypeScript SDK for browser and Node.js environments",
  "license": "ISC",
  "author": "Simon Pallister",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "browser": "./dist/index.global.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./Types": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "hcl",
    "interact",
    "personalization",
    "offers",
    "marketing",
    "customer-data-platform",
    "cdp",
    "real-time",
    "server-side",
    "browser",
    "universal",
    "typescript"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs,iife --dts",
    "dev": "tsup src/index.ts --format esm,cjs,iife --dts --watch"
  },
  "devDependencies": {
    "@types/node": "^20",
    "terser": "^5.39.0",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  }
}
